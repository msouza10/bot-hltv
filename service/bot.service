# escrever um servico para usarmos para ser o nosso init

[Unit]
Description=Bot Service
After=network.target
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=always
RestartSec=10
User=root
ExecStart=/root/code/bot-hltv/venv/bin/python -m src.bot
[Install]
WantedBy=multi-user.target

# colocar este ficheiro em /etc/systemd/system/bot.service